<h1>Seattle Language Distribution by Zipcode</h1>

<h3>Select a language: <%= @language.capitalize %></h3>
<%#= form do |f| %>
  <%# collection_select %>
<%# end %>

<h4>Seattle</h4>

<ul>
  <% language_speakers = 0 %>
  <% @seattle_zips.each do |zipcode| %>
    <li><%= zipcode.zipcode %>: <%= zipcode.send(@language) %></li>
    <% language_speakers += zipcode.send(@language) %>
  <% end %>
  <li>Seattle Total: <%= language_speakers %></li>
</ul>

<h4>Vancouver</h4>

<ul>
  <% language_speakers = 0 %>
  <% @vancouver_zips.each do |zipcode| %>
    <li><%= zipcode.zipcode %>: <%= zipcode.send(@language) %></li>
    <% language_speakers += zipcode.send(@language) %>
  <% end %>
  <li>Vancouver Total: <%= language_speakers %></li>
</ul>
